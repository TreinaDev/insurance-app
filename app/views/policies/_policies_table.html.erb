<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Policy.human_attribute_name(:code) %></th>
      <th><%= Policy.human_attribute_name(:client_name) %></th>
      <th><%= Policy.human_attribute_name(:purchase_date) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= link_to policy.code, policy_path(policy.id), class: "link-dark" %></td>
        <td><%= policy.client_name %></td>
        <% if policy.active? %>
          <td><%= policy.purchase_date.strftime("%d/%m/%Y") %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <% if policy.active? && policy.file.attached? %>
            <td><i class="bi bi-file-earmark-pdf-fill text-success"></i></td>
        <% elsif policy.active? %>
            <td><i class="bi bi-file-earmark-x-fill text-danger"></i></td>
        <% else %>
            <td>-</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

